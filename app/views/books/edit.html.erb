<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  
  <h4>感想</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>

  <p><%= link_to 'Show', book_path(@book) %></p>
  <span><%= link_to 'Back', '/books/new' %></span>
  
<% end %>