<div>
  <%= flash[:notice] %>
</div>

<h1>BookS</h1>

<table>
  <tr>
    <th>本のタイトル</th>
    <th>感想</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book) %> |
        <%= link_to "Edit", edit_book_path(book) %> |
        <%= link_to "Destroy", book_path(book),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %> 
</table>

<hr>


  <% if @book.errors.any? %>
    <p><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

<%= form_with model: @book, local: true do |f| %>

  <h3>New book</h3>

  <p>
    <%= f.label :title, "本のタイトル" %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body, "感想" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Create Book" %>
  </p>
<% end %>