<h1>BookS</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book) %> |
        <%= link_to "Edit", edit_book_path(book) %> |
        <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %> 
</table>

<hr>

<%= form_with model: @book, local: true do |f| %>
  <h3>New book</h3>

  <p>
    <%= f.label :title, "本のタイトル" %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body, "感想" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Create Book" %>
  </p>
<% end %>